<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:iCalendarReminderApp.Converters"
             x:Class="iCalendarReminderApp.Views.MainPage"
             Title="iCalendar Reminder App">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:DateTimeToStringConverter x:Key="DateTimeConverter" />
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

            <!-- Стиль для Label с датой -->
            <Style x:Key="DateLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="10,5,10,5" />
            </Style>
            <!-- Стиль для Label с событием -->
            <Style x:Key="EventLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
            </Style>
            <!-- Стиль для кнопок -->
            <Style x:Key="ActionButtonStyle" TargetType="Button">
                <Setter Property="WidthRequest" Value="100" />
                <Setter Property="HeightRequest" Value="30" />
                <Setter Property="FontSize" Value="12" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout>
            <Button Text="Импортировать iCalendar" Clicked="OnImportClicked" Margin="10" />

            <!-- CollectionView для сгруппированных событий -->
            <CollectionView ItemsSource="{Binding GroupedEvents}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <!-- Дата группы -->
                            <Label Text="{Binding Key, StringFormat='{0:dddd, dd MMMM yyyy}'}" Style="{StaticResource DateLabelStyle}" />

                            <!-- Список событий для этой даты -->
                            <StackLayout>
                                <CollectionView ItemsSource="{Binding}">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout Padding="10">
                                                <!-- Название события - увеличенный текст -->
                                                <Label Text="{Binding Title}" 
                               Style="{StaticResource EventLabelStyle}"
                               FontSize="18" />
                                                <!-- Увеличиваем размер шрифта -->
                                                <Label Text="{Binding StartTime, Converter={StaticResource DateTimeConverter}}" 
                               Style="{StaticResource EventLabelStyle}" />

                                                <!-- Кнопки действия в виде иконок -->
                                                <StackLayout Orientation="Horizontal" Spacing="10" HorizontalOptions="Start">
                                                    <Button Text="&#128279;" 
                                                        IsVisible="{Binding Link, Converter={StaticResource NullToVisibilityConverter}}"
                                    CommandParameter="{Binding Link}"
                                    Clicked="OnNavigateToLinkClicked"
                                    BackgroundColor="LightBlue"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Padding="0"
                                    FontSize="20" 
                                    CornerRadius="15" />

                                                        <Button Text="&#9997;" 
                                                            Clicked="OnEditEventClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="LightGreen"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Padding="0"
                                    FontSize="20"
                                    CornerRadius="15" />

                                                            <Button Text="&#128465;" 
                                                                Clicked="OnDeleteClicked"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="LightCoral"
                                    HeightRequest="30"
                                    WidthRequest="30"
                                    Padding="0"
                                    FontSize="20"
                                    CornerRadius="15" />
                                                </StackLayout>
                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </StackLayout>

                            <!-- Разделитель между группами -->
                            <BoxView HeightRequest="1" Color="LightGray" HorizontalOptions="FillAndExpand" />
                        </StackLayout>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>